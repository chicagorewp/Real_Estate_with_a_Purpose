<div class="container show-page">

  <h4 id="notice"><%= notice %></h4>

    <h4></h4>
      <%= image_tag @charity.logo.url(:medium) %>
    </h4></h4>
    <h4></h4>
      <strong>Name:</strong>
      <%= @charity.name %>
    </h4></h4>

    <h4></h4>
      <strong>Description:</strong>
      <%= @charity.description %>
    </h4></h4>
  <div class="container">
    <div class="row" id="charity-actions">
      <%= link_to 'Edit', "/charities/#{@charity.id}/edit", class: "btn btn-info" %> | <%= link_to 'Delete', "/charities/#{@charity.id}", method: :delete, class: "btn btn-warning" %> |
      <%= link_to 'Back', charities_path, class: "btn btn-default" %>
    </div>
  </div>
</div>

 
